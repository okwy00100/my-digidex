<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/digimon_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/digimon_logo" />

        <TextView
            android:id="@+id/digimon_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/michroma"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/digimon_level"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/digimon_image"
            app:layout_constraintTop_toTopOf="@+id/digimon_image"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/digimon_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/michroma"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/digimon_image"
            app:layout_constraintEnd_toEndOf="@id/digimon_name"
            app:layout_constraintStart_toStartOf="@id/digimon_name"
            app:layout_constraintTop_toBottomOf="@id/digimon_name"
            tools:text="@string/app_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>





