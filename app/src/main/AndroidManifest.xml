<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.okwy.mydigidex">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyDigidexApp"
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@drawable/digimon_icon"
        android:roundIcon="@drawable/digimon_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyDigidex">
        <activity
            android:name=".views.DetailActivity"
            android:label="@string/digimon_info"
            android:exported="true" />
        <activity
            android:name=".views.MainActivity"
            android:label="@string/pick_a_digimon"
            android:exported="true" />

        <activity
            android:name=".views.Splash"
            android:exported="true"
            android:theme="@style/MainTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>